                            <option value="#FFFAFA"></option>

                        <label for="pass">Correo electronico:</label>
                            <input type="email" placeholder="" id="pass" name="email"  value="<%= locals.old && old.email ? old.email : null %>">
                            <span class="error"><%= locals.errores && errores.email ? errores.email.msg : null %> </span>
